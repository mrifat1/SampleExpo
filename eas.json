{
    "cli": {
        "version": ">= 16.18.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "preview": {
            "distribution": "internal"
        },
        "production": {
            "autoIncrement": true
        },
        "production-apk": {
            "android": {
                "buildType": "apk"
            },
            "autoIncrement": true
        },
        "production-apk-small": {
            "android": {
                "buildType": "apk",
                "gradleCommand": ":app:assembleRelease"
            },
            "autoIncrement": true
        }
    },
    "submit": {
        "production": {}
    }
}